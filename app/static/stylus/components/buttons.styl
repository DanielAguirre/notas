.btn
	display inline-block
	line-height 1.5
	text-align center
	vertical-align middle
	font-size 100%
	white-space nowrap
	background-color buttonbackground
	border none
	font-weight bold
	cursor pointer
	margin 0
	padding-top 0
	padding-bottom 0
	padding-right 1rem
	padding-left 1rem
	border-radius 3px
	color rgba(0,0,0,0.87)	
	
.btn-warning
	background-color color-warning
	color white
	&:hover 
		background-color rgb(211,47,47)		
			

.btn-primary
	background-color button-primary--color
	color white